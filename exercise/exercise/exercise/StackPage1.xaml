<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="exercise.StackPage1">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness" iOS="0, 20, 0, 0">
        </OnPlatform>
    </ContentPage.Padding>
    <StackLayout >
        <StackLayout Padding="10">
            <Label Text="nyc_photographer" TextColor="Black"/>
        </StackLayout>

        <Image Source="https://xamarin.com/content/images/pages/forms/example-app.png" />        <StackLayout Orientation="Horizontal" Spacing="20" Padding="10, 0">            <Button Text="Like" TextColor="Blue" BackgroundColor="Transparent"/>            <Button Text="Comment" TextColor="Blue" BackgroundColor="Transparent"/>            <Button Text="Share" TextColor="Blue" BackgroundColor="Transparent"/>        </StackLayout>        <StackLayout>
            <BoxView Color="#f0f0f0"  HeightRequest="1" />
            <Label Text="700 likes" TextColor="Black" FontAttributes="Bold"/>
            <Label TextColor="#444" Text="This is a shot yesterday in Skanor, Sweden, when driving home, from a couple of days of work in Denmark." />        </StackLayout>        
    </StackLayout>
</ContentPage>